<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#760000"
        android:orientation="vertical">
        <!-- slide layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c1"
            android:gravity="left"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/menu_bar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="20dp"
                >

                <ImageButton
                    android:scaleType="matrix"
                    android:layout_gravity="center|left"
                    android:id="@+id/bt_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/c2"
                    android:background="@drawable/honeycomb" />
        </FrameLayout>

            <TextView
                android:id="@+id/board_list_title"
                android:gravity="left|center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="제목"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/c2"
                android:layout_weight="5"/>


        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_menuLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff393c46"
                android:gravity="left"
                android:orientation="vertical"
                android:textColor="#ffffff">

                <!-- include -->

                <include
                    android:id="@+id/ic_leftslidemenu"
                    layout="@layout/leftslidemenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="vertical">

            </LinearLayout>
            <LinearLayout
                android:background="@color/c6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll_mainlayout"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_empty"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#81535353"
                    android:visibility="gone"
                    android:orientation="vertical"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/inter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</LinearLayout>